<Window x:Class="WPFColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFColorPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Cornsilk">
        <Rectangle Height="78" Margin="50,25,50,0" Stroke="Black" VerticalAlignment="Top"/>
        <Label Content="Dobierz kolor suwakami i zapisz przyciskiem:" HorizontalAlignment="Left" Margin="50,137,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Center" Margin="0,199,0,0" VerticalAlignment="Top" Width="640" Maximum="255"/>
        <Label Content="R" HorizontalAlignment="Left" Margin="50,195,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.079,-0.191"/>
        <Grid Background="Cornsilk">
            <Rectangle x:Name="ColorShowcaseBox" Height="78" Margin="50,25,50,0" Stroke="Black" VerticalAlignment="Top" Fill="White"/>
            <Label Content="Dobierz kolor suwakami i zapisz przyciskiem:" HorizontalAlignment="Left" Margin="50,137,0,0" VerticalAlignment="Top"/>
            <Slider x:Name="RValueSlider" HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Width="640" Maximum="255" Value="255" ValueChanged="RValueSlider_ValueChanged"/>   
            <Label x:Name="RValueLabel" Content="255" HorizontalAlignment="Left" Margin="732,178,0,0" VerticalAlignment="Top"/>
            <Label Content="R" HorizontalAlignment="Left" Margin="50,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.079,-0.191"/>
            <Slider x:Name="GValueSlider" HorizontalAlignment="Center" Margin="0,228,0,0" VerticalAlignment="Top" Width="640" Maximum="255" Value="255" ValueChanged="GValueSlider_ValueChanged"/>
            <Label x:Name="GValueLabel" Content="255" HorizontalAlignment="Left" Margin="732,224,0,0" VerticalAlignment="Top"/>
            <Label Content="G" HorizontalAlignment="Left" Margin="50,224,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.079,-0.191"/>
            <Slider x:Name="BValueSlider" HorizontalAlignment="Center" Margin="0,271,0,0" VerticalAlignment="Top" Width="640" Maximum="255" Value="255" ValueChanged="BValueSlider_ValueChanged"/>
            <Label x:Name="BValueLabel" Content="255" HorizontalAlignment="Left" Margin="732,267,0,0" VerticalAlignment="Top"/>
            <Label Content="B" HorizontalAlignment="Left" Margin="50,267,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.079,-0.191"/>
            <Button x:Name="UpdateButton" Content="Pobierz" Margin="325,309,325,0" VerticalAlignment="Top" Background="Peru" RenderTransformOrigin="0.5,0.5" Height="30" Click="UpdateButton_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.114"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Label x:Name="TotalValueLabel" Content="255, 255, 255" Margin="325,364,325,0" VerticalAlignment="Top" Background="White"/>

        </Grid>

    </Grid>
</Window>
